{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"target": "ES2017",
		"declaration": true,
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"strictFunctionTypes": true,
		"isolatedModules": true,
		"noImplicitThis": true,
	},
}
